hdd=`df -h --output=used,pcent / | awk 'NR==2{print $1" "$2}'`
echo -e "ï‚  $hdd"

case $BUTTON in
	  1) st -e htop ;;
    3) notify-send "System status" "Disk usage:\n$(df -h | awk '/^\/dev/{print $NF ": " $3}')\n\nRoot usage:\n$(df -h | awk '$NF=="/"{printf "Used: %s/%s (%.2f%%)\n", $3, $2, $5}')" ;;
	  6) st -e nvim "$0" ;;
esac
